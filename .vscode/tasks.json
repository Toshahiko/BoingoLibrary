{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: clang++ build project",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"${workspaceFolder}/src/*.cpp",
				"${workspaceFolder}/main/main.cpp",
				"-std=c++2a",
				"-I${workspaceFolder}",
				"-o",
				"${workspaceFolder}/build/${workspaceFolderBasename}.out"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": ["absolute"]
			},
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"detail": "compiler: /usr/bin/clang++"
		},
		{
			"type": "shell",
			"label": "C/C++: clang++ build test project",
			"command": "/usr/bin/clang++",
			"args": [
				"-g",
				"${workspaceFolder}/src/*.cpp",
				"${workspaceFolder}/test/*.cpp",
				"-std=c++2a",
				"-I/Users/tanimotokazuhiko/Projects/doctest/doctest",
				"-I${workspaceFolder}",
				"-o",
				"${workspaceFolder}/build/${workspaceFolderBasename}Test.out"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": ["absolute"]
			},
			"group": {
				"kind": "test",
				"isDefault": true,
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}